<h1>Edit Movie</h1>


<%= simple_form_for @movie, html: {multipart: true} do |mteja| %>

	<%= mteja.select :category_id, @categories %>

  <%= mteja.input :title, label: "Movie Title" %>
  <%= mteja.input :description, label: "Movie Description" %>
  <%= mteja.input :director, label: "Director/s" %>
  <%= mteja.button :submit %>
<% end %> 